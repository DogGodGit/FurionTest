{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    },
    "Database": {
      "MinimumLevel": "Warning",
      "SqlProfiler": true,
      "SqlSlowSeconds": 3
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "EnabledReferenceAssemblyScan": true // 启用模块化程序集扫描
    //"SupportPackageNamePrefixs": [ "Module1", "Module2", "..." ] // 配置通过 NuGet 方式安装的模块化包，如果不是通过 NuGet 方式可不配置
    // "ExternalAssemblies": ["plugins/Module1.dll", "plugins/Module2.dll", ...]   // 配置加载网站 plugins 目录下的模块程序集，可不配置
  },
  "ConnectionConfigs": [
    {
      "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=DistCache;Integrated Security=True;Connect Timeout=30;Encrypt=False;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False",
      "DbType": "SqlServer",
      "IsAutoCloseConnection": true,
      "DbLinkName": "TestCache"
    }
  ],
  "EnableGlobalAuthorize": false,
  "RegionType": "Asia",
  "CacheType": "Redis",
  "EventHubType": "None",
  "Redis": {
    "ConnectionString": "127.0.0.1,password=P0o9i8u7",
    "IndexSuffix": "furion_"
  },
  "RabbitMQ": {
    "HostName": "127.0.0.1",
    "UserName": "guest",
    "Password": "guest"
  },
  "JWTSettings": {
    "ValidateIssuerSigningKey": true, // 是否验证密钥，bool 类型，默认true
    "IssuerSigningKey": "F17E7020-78FC-41A7-BF7F-2C00254B99CD", // 密钥，string 类型，必须是复杂密钥，长度大于16
    "ValidateIssuer": true, // 是否验证签发方，bool 类型，默认true
    "ValidIssuer": "JwtAuthApp", // 签发方，string 类型
    "ValidateAudience": true, // 是否验证签收方，bool 类型，默认true
    "ValidAudience": "https://localhost:4398", // 签收方，string 类型
    "ValidateLifetime": true, // 是否验证过期时间，bool 类型，默认true，建议true
    "ExpiredTime": 20, // 过期时间，long 类型，单位分钟，默认20分钟
    "ClockSkew": 5, // 过期时间容错值，long 类型，单位秒，默认 5秒
    "Algorithm": "HS256" // 加密算法，string 类型，默认 SecurityAlgorithms.HmacSha256
  },
  "CorsAccessorSettings": {
    "PolicyName": "自定义跨域策略名",
    "WithOrigins": [ "https://localhost:4399" ],
    "WithExposedHeaders": [ "access-token", "x-access-token" ]
  },
  "Furion": {
    "Address": "https://localhost:4398/api"
  },
  "LocalizationSettings": {
    "SupportedCultures": [ "zh-CN", "en-US" ], // 配置支持的语言列表
    "DefaultCulture": "zh-CN" // 配置默认语言，如果不配置，取 SupportedCultures 的第一项
  }
}